<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ProfessionalAdvancementCourses.Views.MainWindow"
        xmlns:vm="using:ProfessionalAdvancementCourses.ViewModels"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="ProfessionalAdvancementCourses">

	<Grid ColumnDefinitions="0.2*,*">
		<StackPanel Grid.Column="0">
			<Button Command="{Binding GoToDescription}" Content="Главная" />
			<Button Command="{Binding GoToSchedule}" Content="Расписание" />
		</StackPanel>
		<ContentControl Grid.Column="1" Content="{Binding CurrentView}"/>
	</Grid>

</Window>
